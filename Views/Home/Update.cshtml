@model Recipe

<form action = "/update/@Model.RecipeId" method= "post">
    <div class = "form-group">
        <label for ="Chef">Chef's Name:</label>
        <input asp-for ="Chef">
    </div>
    <div class = "form-group">
        <label for ="Name">Name of Dish:</label>
        <input asp-for ="Name">
    </div>
    <div class = "form-group">
        <label for ="Calories"># of Calories:</label>
        <input asp-for ="Calories">
    </div>
    <div class = "form-group">
        <label for ="Tastiness">Tastiness:</label>
        <input asp-for ="Tastiness">
    </div>
    <div class = "form-group">
        <label for ="Description">Description:</label>
        <input asp-for ="Description">
    </div>
    <input type="submit" value ="Add" class="btn btn-primary">
</form> 